<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>

<hr>

<div>

  <form action="/insert_photo" method="post">

    <label for="image_box">Image</label>
    <input type="file" id="image_box" name="query_image">

    <label for="owner_id_box"><!-- owner --></label>
    <input type="hidden" id="owner_id_box" name="query_owner_id" value="<%= session.fetch(:user_id)%>">

    <label for="caption_box">Caption</label>
    <textarea id="caption_box" name="query_caption" rows="3"></textarea>

    <button>Add photo</button>

  </form>
  
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Image
        </th>

        <th>
          Owner
        </th>

        <th>
          Caption
        </th>

        <th>
          Likes count
        </th>

        <th>
          Comments count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>
        <td>
          <%= a_photo.id %>
        </td>

        <td>
          <%= a_photo.image %>
        </td>

        <td>
          <%= a_photo.owner_id %>
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <%= a_photo.comments_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_photo.updated_at) %> ago
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
