<h1>List of users</h1>
<table border="1">
    <tr>
        <th>
            Username
        </th>

        <th>
            Private?
        </th>
        <% if session.fetch(:user_id) != nil %>
        <th></th>
        <% end %>
        <th></th>
        
    </tr>
    <% @list_of_users.each do |a_user| %>
        <tr>
            <td>
                <%= a_user.username %>
            </td>
            <td>
              <% if a_user.private == true %>
                <%= "Yes" %>
              <% else %>
                <%= "No" %>
              <% end %>  
            </td>
            <% if session.fetch(:user_id) != nil %>
            
              <td>
                <form action="/insert_follow_request" method="post">
                <input type="hidden" name="query_recipient_id" value="117">

                <button>
                  Follow
                </button>
              </form>
              </td>

            <% end %>
            <td>
                <a href="/users/<%= a_user.username %>">
                    Show details
                </a>
            </td>
        </tr>
    <% end %>

</table>
